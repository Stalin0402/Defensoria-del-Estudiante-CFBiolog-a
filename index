    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mostrar/ocultar header al hacer scroll
        window.addEventListener('scroll', function() {
            const header = document.getElementById('stickyHeader');
            if (window.scrollY > 100) {
                header.style.display = 'block';
            } else {
                header.style.display = 'none';
            }
        });
        
        // Navegación suave
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Funcionalidad del test
        let currentQuestion = 0;
        const totalQuestions = 13;
        
        function nextQuestion(current) {
            // Validar que se haya seleccionado una respuesta
            if (current > 0) {
                const selected = document.querySelector(`input[name="q${current}"]:checked`);
                if (!selected) {
                    alert('Por favor, selecciona una respuesta antes de continuar.');
                    return;
                }
            } else {
                // Validar selección de género
                const selectedGender = document.querySelector('input[name="gender"]:checked');
                if (!selectedGender) {
                    alert('Por favor, selecciona tu género.');
                    return;
                }
            }
            
            document.getElementById(`question-${current}`).classList.remove('active');
            currentQuestion = current + 1;
            document.getElementById(`question-${currentQuestion}`).classList.add('active');
        }
        
        function prevQuestion(current) {
            document.getElementById(`question-${current}`).classList.remove('active');
            currentQuestion = current - 1;
            document.getElementById(`question-${currentQuestion}`).classList.add('active');
        }
        
        function calculateResults() {
            // Validar última pregunta
            const selected = document.querySelector(`input[name="q13"]:checked`);
            if (!selected) {
                alert('Por favor, selecciona una respuesta antes de ver los resultados.');
                return;
            }
            
            // Calcular puntuación (simulada)
            let score = 0;
            for (let i = 1; i <= 13; i++) {
                const answer = document.querySelector(`input[name="q${i}"]:checked`);
                if (answer) {
                    score += parseInt(answer.value);
                }
            }
            
            // Obtener género seleccionado
            const gender = document.querySelector('input[name="gender"]:checked').value;
            
            // Mostrar resultados
            const resultsDiv = document.getElementById('results');
            const resultTitle = document.getElementById('result-title');
            const resultText = document.getElementById('result-text');
            const motivationalMessage = document.getElementById('motivational-message');
            const reportLink = document.getElementById('report-link');
            
            document.getElementById(`question-${currentQuestion}`).classList.remove('active');
            
            if (score >= 20 && score <= 65) {
                resultsDiv.className = 'result-section harassment';
                resultTitle.textContent = 'Posible situación de acoso identificada';
                resultText.textContent = `Tu puntuación es ${score}. Según los resultados, podrías estar experimentando una situación de acoso sexual.`;
                motivationalMessage.innerHTML = '<p><strong>No estás solo/a en esto.</strong> Hay personas y recursos disponibles para ayudarte. Considera hablar con alguien de confianza y buscar apoyo.</p>';
            } else {
                resultsDiv.className = 'result-section no-harassment';
                resultTitle.textContent = 'Resultados dentro de parámetros normales';
                resultText.textContent = `Tu puntuación es ${score}. Según los resultados, no se identifican patrones claros de acoso sexual.`;
                motivationalMessage.innerHTML = '<p>Es importante mantenerse alerta y conocer los recursos disponibles. Si en algún momento experimentas situaciones incómodas, no dudes en buscar ayuda.</p>';
            }
            
            // Actualizar estadísticas (simulación)
            updateStatistics(gender, score >= 20 && score <= 65);
            
            resultsDiv.style.display = 'block';
        }
        
        // Funcionalidad del panel de administración
        function updateStatistics(gender, isHarassment) {
            // En una implementación real, esto se conectaría a una base de datos
            // Por ahora, simulamos datos
            
            // Actualizar contadores
            document.getElementById('total-tests').textContent = parseInt(document.getElementById('total-tests').textContent) + 1;
            
            if (isHarassment) {
                document.getElementById('harassment-cases').textContent = parseInt(document.getElementById('harassment-cases').textContent) + 1;
            }
            
            // Actualizar gráficos
            updateCharts();
        }
        
        function updateCharts() {
            // Datos simulados para los gráficos
            const genderData = {
                labels: ['Mujeres', 'Hombres', 'Otros'],
                datasets: [{
                    data: [65, 30, 5],
                    backgroundColor: [
                        '#8B1874',
                        '#B71375',
                        '#FC4F00'
                    ]
                }]
            };
            
            const harassmentData = {
                labels: ['Acoso identificado', 'Sin acoso identificado'],
                datasets: [{
                    data: [40, 60],
                    backgroundColor: [
                        '#8B1874',
                        '#28a745'
                    ]
                }]
            };
            
            // Gráfico de género
            const genderCtx = document.getElementById('genderChart').getContext('2d');
            new Chart(genderCtx, {
                type: 'pie',
                data: genderData,
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        title: {
                            display: true,
                            text: 'Distribución por Género'
                        }
                    }
                }
            });
            
            // Gráfico de acoso
            const harassmentCtx = document.getElementById('harassmentChart').getContext('2d');
            new Chart(harassmentCtx, {
                type: 'doughnut',
                data: harassmentData,
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        title: {
                            display: true,
                            text: 'Resultados del Test'
                        }
                    }
                }
            });
        }
        
        // Inicializar gráficos al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            updateCharts();
            
            // Configurar enlace de denuncia (reemplazar con el enlace real cuando esté disponible)
            document.getElementById('report-link').addEventListener('click', function(e) {
                e.preventDefault();
                alert('En una implementación real, este enlace llevaría al formulario de denuncia externo.');
                // window.location.href = 'URL_DEL_FORMULARIO_EXTERNO';
            });
        });
    </script>
